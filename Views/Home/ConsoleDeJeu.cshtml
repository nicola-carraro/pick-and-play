@using PickAndPlay;

@model PickAndPlay.Models.ConsoleDeJeu;

@{
    ViewData["Title"] = Model.Model;
}

@section Css {
    <link href="~/bootstrap/css/star-rating.css"
          media="all"
          rel="stylesheet"
          type="text/css" />
    <link href="~/bootstrap/css/star-rating-theme.css"
          media="all"
          rel="stylesheet"
          type="text/css" />
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" />
}

<div class="row">
    <div class="col-md-6">
        <div>
            @if (Model.Image != null && Model.Image.NomFile != null)
            {
                <img class="img-fluid p-5"
                     src="~/images/consoles/@Model.Image.NomFile"
                     alt="@Model.Image.Alt" />
            }

        </div>
    </div>
    <div class="col-md">
        <section class="m-5">
            <h4 class="display-5 m-3">
                @Utilitaires.Afficher(@Model.Model, "Nom inconnu")
            </h4>
            <div class="m-3">
                <p>
                    <strong>Producteur :</strong><a href="#"> @Utilitaires.Afficher(@Model.Marque, "Inconnu")</a>
                </p>
                <p>
                    <strong>Date de sortie : </strong> <a href="#">
                        @Utilitaires.AfficherAnnee(Model.DateDeSortie, "Inconnue")
                    </a>
                </p>
                <p>
                    <a href="recherche.html">Jeux</a>
                </p>
                <form class="">
                    <div class="form-group  row">
                        <label for="note" class="col-md-4 col-form-label"><strong>Note&nbsp;: </strong></label>
                        <span id="note" class="col-md-8 mt-2">

                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star"></span>
                            <span class="fa fa-star"></span>
                        </span>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>

