
@using Microsoft.AspNetCore.Http;
<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Pick & Play - Accueil</title>
    <meta name="description" content="Location de jeux vidéo" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="/images/pick-and-play.png" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
          integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" 
          crossorigin="anonymous">
    <link rel="stylesheet" href="~/bootstrap/css/custom.css">
    @RenderSection("Css", required: false)
</head>

<body class="m-4">
    <div class="container-fluid m-1 p-1">



        <header>
            <ul class="row nav">

                <li class="col-md-2 nav-item">
                    <a class="nav-link active" href="~/">
                        <img class="img-fluid" src="~/images/logo.png"
                             alt="Pick & Play icon" />
                    </a>
                </li>

                <li class="col-md-4 mt-2 nav-item">
                    <form method="get" asp-controller="Home" asp-action="Rechercher">
                        <div class="input-group p-2">
                            @{
                                string placeholder = "Rechercher";
                                if (ViewData["query"] != null)
                                {
                                    placeholder = (string)ViewData["query"];

                                }
                            }

                            <input type="text" class="form-control" name="query" placeholder=@placeholder aria-label="Rechercher" />
                            <div class="input-group-append">

                                <button type="submit"
                                        class="input-group-text"
                                        id="basic-addon2">
                                    <svg class="bi bi-search" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor"
                                         xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd"
                                              d="M10.442 10.442a1 1 0 0 1 1.415 0l3.85 3.85a1 1 0 0 1-1.414 1.415l-3.85-3.85a1 1 0 0 1 0-1.415z" />
                                        <path fill-rule="evenodd"
                                              d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z" />
                                    </svg>
                                </button>

                            </div>
                        </div>
                    </form>

                </li>

                <li class="col-md mt-2 nav-item">
                    <a class="p2 btn nav-link  text-primary" href="actualites.html">
                        <span class="h6">Actualités</span>
                    </a>
                </li>

                

                <partial name="_LoginPartial" />
            </ul>
        </header>
        <main role="main" class="pb-3 m-5">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container text-center text-md-left">

            <div class="row">

                <div class="col-md-3 mx-auto">
                    <h5 class="font-weight-bold text-uppercase mt-3 mb-4">Links</h5>

