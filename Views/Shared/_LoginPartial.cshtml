@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@if (SignInManager.IsSignedIn(User))
{

    <li class="col-md-2 mt-2 nav-item text-center">
        <div class="btn-group">
            <a id="manage" class="p-2 mr-0 btn nav-link text-danger" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                <span class="h6"> @UserManager.GetUserName(User)</span>
                <span class="badge h6 badge-light text-danger">4</span>
            </a>
            <button type="button" class=" ml-0 btn dropdown-toggle r h6 text-danger" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                <span class="sr-only">Toggle Dropdown</span>
            </button>
            <div class="dropdown-menu">
                <a class="dropdown-item text-danger" href="#">Location en retard</a>
                <a class="dropdown-item text-success" href="#">
                    Votre reservation est disponible
                </a>
                <a class="dropdown-item text-success" href="#">Something else here</a>
                <a class="dropdown-item text-success" href="#">Dévoilée la nouvelle Playstation</a>
            </div>
        </div>
    </li>

    <li class="col-md mt-2 nav-item text-center">
        <form id="logoutForm" class=" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <a id="logout"  asp-area="Identity" asp-page="/Account/Logout" class="p2 btn nav-link  text-primary"><span class="h6">Logout</span></a>
        </form>
    </li>
}
else
{
    <li class="col-md mt-2 nav-item text-center">
        <a class="p2 btn nav-link  text-primary" id="register" asp-area="Identity" asp-page="/Account/Register"><span class="h6">Register</span></a>
    </li>
    <li class="col-md mt-2 nav-item text-center">
        <a class="p2 btn nav-link  text-primary" id="login" asp-area="Identity" asp-page="/Account/Login">
            <span class="h6">Login</span>
       </a>
    </li>
}

